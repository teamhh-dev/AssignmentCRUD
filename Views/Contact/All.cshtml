@model IEnumerable<AssignmentCRUD.Models.Contact>

@{
    ViewBag.Title = "All Contacts";
}

<h2>@ViewBag.Title</h2>

<p>
    <div class="row bg-info link-dark p-2 rounded-3 shadow shadow-sm" >
        @Html.ActionLink("Create New", "Create",new { },new { @class="link-dark"})
    </div>
</p>
<table class="table table-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ActiveSince)
        </th>
        <th></th>
    </tr>
    @if (Model != null && Model.Count()>0)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ActiveSince)
                </td>
                <td>
                    
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                </td>
            </tr>
        }

    }
    else
    {
        <tr>
            <td colspan="5">No Contact Available!</td>
        </tr>
    }
</table>
